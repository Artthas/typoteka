extends layout.pug 

block content
  header.header
    a.header__logo.logo(href='#')
      img.logo__image(src='img/icons/logo-image-only.svg' alt='логотип Тайпотеки')
      span.logo__name Типотека
    button.button.button--colored.header__button-new Новая запись
    .header__dropdown
      a.button.button--burger.header__burger(href='#') Открыть меню
      ul.navigation.header__navigation
        li.navigation__item
          a(href='main.html') Пункт меню
        li.navigation__item
          a(href='main.html') Пункт меню
        li.navigation__item
          a(href='main.html') Пункт меню
        li.navigation__item
          a(href='main.html') Пункт меню
    a.header__search.button.button--search(href='#' aria-label='поиск по сайту')
  main
    section
      .popup.popup--new-publication.popup--anti
        .new-publication
          form(action='/articles/add' method='post' enctype="multipart/form-data" autocomplete="off")
            .new-publication__header
              h1 Новая публикация
              .new-publication__date-form
                h3 Дата публикации
                .new-publication__date-form-division
                  .new-publication__date-block
                    label(for='new-publication-date' aria-label='Календарь')
                    input#new-publication-date(type='text' name='createdDate' placeholder='2019-03-21')
              button.new-publication__button.button.button--colored(type='submit') Опубликовать
            a.popup__button.button.button--popup-close(aria-label='Закрыть окно')
              | Закрыть
              | окно
            .new-publication__form.form
              .form__wrapper.form__wrapper--intro
                .form__field
                  label
                    input(type='text' name='title' placeholder='Заголовок' required='')
                .form__field.form__field--post-image
                  label
                    input#image-name-field(type='text' name='img' placeholder='Фотография' readonly='')
                  .form__image-loader.form__image-loader--publication
                    label
                      input.visually-hidden(type='file' name='avatar')
                      | Обзор
                .new-publication__category-wrapper
                  .new-publication__checkbox
                    input#checkbox-1(type='checkbox' name='Деревья')
                    label(for='checkbox-1') Деревья
                  .new-publication__checkbox
                    input#checkbox-2(type='checkbox' name='За жизнь')
                    label(for='checkbox-2') За жизнь
                  .new-publication__checkbox
                    input#checkbox-3(type='checkbox' name='Без рамки')
                    label(for='checkbox-3') Без рамки
                  .new-publication__checkbox
                    input#checkbox-4(type='checkbox' name='Разное')
                    label(for='checkbox-4') Разное
                  .new-publication__checkbox
                    input#checkbox-5(type='checkbox' name='IT')
                    label(for='checkbox-5') IT
                  .new-publication__checkbox
                    input#checkbox-6(type='checkbox' name='Музыка')
                    label(for='checkbox-6') Музыка
                  .new-publication__checkbox
                    input#checkbox-7(type='checkbox' name='Кино')
                    label(for='checkbox-7') Кино
                  .new-publication__checkbox
                    input#checkbox-8(type='checkbox' name='Программирование')
                    label(for='checkbox-8') Программирование
                  .new-publication__checkbox
                    input#checkbox-9(type='checkbox' name='Железо')
                    label(for='checkbox-9') Железо
                  .new-publication__checkbox
                    input#checkbox-10(type='checkbox' name='Человек')
                    label(for='checkbox-10') Человек
                  .new-publication__checkbox
                    input#checkbox-11(type='checkbox' name='Космос')
                    label(for='checkbox-11') Космос
                  .new-publication__checkbox
                    input#checkbox-12(type='checkbox' name='Животные')
                    label(for='checkbox-12') Животные
                  .new-publication__checkbox
                    input#checkbox-13(type='checkbox' name='Природа')
                    label(for='checkbox-13') Природа
                  .new-publication__checkbox
                    input#checkbox-14(type='checkbox' name='Психология')
                    label(for='checkbox-14') Психология
                //.new-publication__category-wrapper
                  a.new-publication__form-link.button.button--transparent(href='#') Добавить категорию
              .form__wrapper.form__wrapper--text
                .form__field.form__field--publication-text
                  label
                    textarea(rows='5' name='announce' placeholder='Анонс публикации')
                .form__field.form__field--publication-text
                  label
                    textarea(rows='10' name='fullText' placeholder='Полный текст публикации')